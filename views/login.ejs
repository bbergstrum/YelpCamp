<% include ../partials/header %>
<div class="container">
    <div class="row">
        <div class="col-md-9 ">
            <div class="thumbnail">
                <div class="caption-full">
                    <h1 id="signupheader">Log-in to Yelp Camp</h1>
                    <hr>
                    <div class="camp-form">
                        <form  action="/login" method="POST">
                            <div class="form-group">
                                <label class="col-sm-2 col-form-label">Username</label>
                                <input class="form-control form-control-lg" type="text" name="username" placeholder="">
                            </div>
                            <div class="form-group">
                                <label class="col-sm-2 col-form-label">Password</label>
                                <input class="form-control form-control-lg" type="password" name="password" placeholder="">
                            </div>
                            <input class="pull-right btn btn-primary form-display" type="submit" value="Login">
                        </form>    
                    </div>
                    <a class="btn btn-primary"href="/campgrounds">Back</a>
                </div>
            </div>
        </div>
    </div>
</div>
