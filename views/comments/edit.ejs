<% include ../../partials/header %>
<div class="container">
    <div class="row">
        <div class="thumbnail">
            <h1>Edit Comment</h1>
            <div>
                <form action="/campgrounds/<%= campground_id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
                    <div class="form-group">
                        <input class="form-control" type="text" name="comment[text]" value="<%= comment.text %>">
                    </div>
                    <div class="form-group-submit">
                        <button class="btn btn-md btn-primary btn-block">Submit!</button>
                    </div>
                </form>
                <a class="btn btn-sm btn-default back" href="/campgrounds">Go Back</a>
            </div>  
        </div>
    </div>
</div>
<% include ../../partials/footer %>

